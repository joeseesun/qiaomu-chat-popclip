{
  "name": "乔木智写",
  "identifier": "com.qiaomu.popclip.chat.cn",
  "description": "基于乔木API的AI智能对话助手，支持多种模型",
  "icon": "qiaomu-icon.svg",
  "popclipVersion": 4151,
  "entitlements": ["network"],
  "options": [
    {
      "identifier": "apiBaseUrl",
      "type": "string",
      "label": "API 基础地址",
      "description": "AI API服务的基础URL地址（不包含/chat/completions）",
      "defaultValue": "https://api.tu-zi.com/v1"
    },
    {
      "identifier": "apikey",
      "type": "secret",
      "label": "API 密钥",
      "description": "您的API密钥"
    },
    {
      "identifier": "customModel",
      "type": "string",
      "label": "自定义模型名称（可选）",
      "description": "输入自定义模型名称。如果填写，将优先使用此模型，忽略下方的模型选择。",
      "defaultValue": ""
    },
    {
      "identifier": "model",
      "type": "multiple",
      "label": "AI 模型",
      "description": "选择要使用的AI模型（如果上方填写了自定义模型则忽略此选择）",
      "values": [
        "claude-sonnet-4-20250514",
        "claude-3-haiku-20240307",
        "claude-3-opus-20240229",
        "o3-mini",
        "gpt-4o-mini",
        "gpt-4o",
        "gpt-4-all",
        "gemini-2.5-pro-preview-06-05",
        "deepseek-v3"
      ],
      "valueLabels": [
        "Claude 4（推荐）",
        "Claude 3 Haiku",
        "Claude 3 Opus",
        "O3 Mini",
        "GPT-4o Mini",
        "GPT-4o",
        "GPT-4 All",
        "Gemini 2.5 Pro",
        "DeepSeek V3"
      ],
      "defaultValue": "claude-sonnet-4-20250514"
    },
    {
      "identifier": "textMode",
      "type": "multiple",
      "label": "响应模式",
      "description": "如何处理AI的回复",
      "values": ["append", "copy", "replace"],
      "valueLabels": ["追加（问题+答案）", "仅复制到剪贴板", "替换选中文本"],
      "defaultValue": "copy"
    },
    {
      "identifier": "systemMessage",
      "type": "string",
      "label": "系统提示",
      "description": "给AI助手的指令",
      "defaultValue": "你是一个有用的AI助手。请清晰简洁地回答问题。"
    }
  ],
  "actions": [
    {
      "title": "智写",
      "identifier": "chat",
      "icon": "qiaomu-icon.svg",
      "javascriptFile": "qiaomu-chat.js",
      "requirements": ["text"]
    },
    {
      "title": "重置",
      "identifier": "reset",
      "icon": "reset-icon.svg",
      "javascriptFile": "reset.js",
      "requirements": [],
      "after": "show-result"
    }
  ]
} 